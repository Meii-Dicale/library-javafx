<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cda.bibliotheque.controller.UserDashboardController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="page-container">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="welcomeLabel" styleClass="welcome-text" />
                <Text styleClass="section-title" text="Mes réservations" />
                <TableView fx:id="reservationsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMediaTitle" text="Média" />
                        <TableColumn fx:id="colStartDate" text="Date de début" />
                        <TableColumn fx:id="colEndDate" text="Date de fin" />
                    </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#switchToAccount" text="Mon Compte" />
                        <Button onAction="#logout" styleClass="button-delete" text="Se déconnecter" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>