<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cda.bibliotheque.controller.PrimaryController">
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" styleClass="form-container">
            <children>
                <Label fx:id="welcomeLabel" styleClass="welcome-text" />
                <Text styleClass="section-title" text="Tableau de bord Administrateur" />
                <Button maxWidth="Infinity" onAction="#switchToUsers" text="Gérer les utilisateurs" />
                <Button maxWidth="Infinity" onAction="#switchToMedias" text="Gérer les médias" />
                <Button maxWidth="Infinity" onAction="#switchToCategories" text="Gérer les catégories" />
                <Button maxWidth="Infinity" onAction="#switchToStock" text="Gérer le stock" />
                <Button maxWidth="Infinity" onAction="#switchToReservations" text="Gérer les réservations" />
                <Button maxWidth="Infinity" onAction="#switchToSecondary" text="Gérer les auteurs" />
                <VBox alignment="CENTER" prefHeight="80.0">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <Button onAction="#handleLogout" styleClass="button-delete" text="Se déconnecter" />
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>