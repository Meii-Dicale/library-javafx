<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cda.bibliotheque.controller.users.UsersController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button onAction="#goBack" text="Retour" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Text styleClass="section-title" text="Gestion des Utilisateurs" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#switchToCreateUser" text="Ajouter un utilisateur" />
                    </children>
                </HBox>
                <TextField fx:id="searchField" promptText="Rechercher par nom ou email..." />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="usersTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colUserName" text="Nom d'utilisateur" />
                <TableColumn fx:id="colMail" text="Email" />
                <TableColumn fx:id="colPhoneNumber" text="Téléphone" />
                <TableColumn fx:id="colActions" text="Actions" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </center>
</BorderPane>