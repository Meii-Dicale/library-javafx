<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cda.bibliotheque.controller.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="350.0" spacing="15.0" styleClass="form-container" BorderPane.alignment="CENTER">
            <children>
                <Text styleClass="section-title" text="Connexion" />
                <VBox spacing="5.0">
                    <children>
                        <Label text="Adresse email :" />
                        <TextField fx:id="emailField" promptText="adresse@email.com" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Mot de passe :" />
                        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
                    </children>
                </VBox>
                <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button defaultButton="true" maxWidth="Infinity" onAction="#handleLogin" text="Se connecter" />
                        <Button maxWidth="Infinity" onAction="#handleCreateAccount" styleClass="secondary-button" text="CrÃ©er un compte" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
